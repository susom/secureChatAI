{
	"name": "SecureChatAI",

	"namespace": "Stanford\\SecureChatAI",

	"description": "SecureChatAI is an External Module (EM) designed as a service to access Stanford's Instance of OpenAI Models, specifically Secure Chat AI",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Irvin Szeto",
			"email": "irvins@stanford.edu",
			"institution": "Stanford University"
		}
	],

    "framework-version": 9,

	"permissions": [
		"redcap_module_system_enable",
		"redcap_module_project_enable",
		"redcap_module_save_configuration"
	],

	"enable-every-page-hooks-on-system-pages": false,

	"links": {
		"project": [

		],
		"control-center": [

		]
	},

	"no-auth-pages": [

	],

	"project-settings": [
		{
			"key": "enable-project-debug-logging",
			"name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],


	"system-settings": [
        {
            "key": "secure-chat-api-url",
            "name": "<b>Api Endpoint</b> Includes LLM Model",
            "required": false,
            "type": "text"
        },
        {
            "key": "secure-chat-api-token",
            "name": "<b>Api Token</b>",
            "required": false,
            "type": "text"
        },
		{
			"key": "enable-system-debug-logging",
			"name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
